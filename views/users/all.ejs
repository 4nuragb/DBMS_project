<% include ../partials/header %>

<nav id="searchNav" class="navbar navbar-expand navbar-light bg-white shadow-sm">
    <div class="container">
      <div class="collapse navbar-collapse">
        <ul class="navbar-nav mr-auto">
            <a class="navbar-brand">View all Users</a>
        </ul>
        <div class="d-none d-md-block">
          <form action="/user/all" method="GET" class="input-group">
            <input type="text" class="form-control" type="text" name="search" placeholder="Search User..." aria-label="Search">
            <div class="input-group-append">
              <button class="btn btn-danger border-0" type="submit">
                    <i class="fa fa-search"></i>
                  </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </nav>

<div class="container mt-4">
    <div class="row">
      <div class="col"></div>
      <div class="col-12 col-md-9">
        
            <% if(noMatch !== null) { %>
              <h3>No results for <span class="font-italic"><%= noMatch %></span>, try again. </h3>
            <% } %>
            
        <% users.forEach(function(user) { %>
            <% if (user.username != "admin") { %>
                <div class="card">
                
                    <h5 class="card-header"><%= user.fullName %></h5>
                    <div class="card-body">
                        <div class="card float-right" style="width: 10rem;" >
                            <img src=<%= user.image %> class="card-img-top" >
                        </div>
                      <h5 class="card-title">User Email: <%= user.email %></h5>
                      <h5 class="card-title">User Phone: <%= user.phone %></h5>
                      <p class="card-text">This User Id was created at <%= user.joined %> </p>
                      <form class="float-left" action="/user/<%= user._id %>?_method=DELETE" method="POST">
                        <button type="submit" class="btn btn-danger btn-sm">Delete Account</button>
                      </form>
                    </div>
                </div>
            <% } %>
        <% }) %>
      </div>
      <div class="col"></div>
    </div>

    
</div>



<% include ../partials/footer %>